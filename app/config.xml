<?xml version='1.0' encoding='utf-8'?>

<widget id="io.cordova.nossodeputado" version="0.1.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Nosso Deputado</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-statusbar" source="npm" spec="1.0.0" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000" /> <!--Your color value will go here-->
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="orientation" value="portrait" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="www/img/iconeapp.png" density="ldpi" />
        <icon src="www/img/iconeapp.png" density="mdpi" />
        <icon src="www/img/iconeapp.png" density="hdpi" />
        <icon src="www/img/iconeapp.png" density="xhdpi" />
        <icon src="www/img/iconeapp.png" density="xxhdpi" />
        <icon src="www/img/iconeapp.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon src="www/img/iconeapp.png" width="180" height="180" />
        <icon src="www/img/iconeapp.png" width="60" height="60" />
        <icon src="www/img/iconeapp.png" width="120" height="120" />
        <icon src="www/img/iconeapp.png" width="76" height="76" />
        <icon src="www/img/iconeapp.png" width="152" height="152" />
        <icon src="www/img/iconeapp.png" width="40" height="40" />
        <icon src="www/img/iconeapp.png" width="80" height="80" />
        <icon src="www/img/iconeapp.png" width="57" height="57" />
        <icon src="www/img/iconeapp.png" width="114" height="114" />
        <icon src="www/img/iconeapp.png" width="72" height="72" />
        <icon src="www/img/iconeapp.png" width="144" height="144" />
        <icon src="www/img/iconeapp.png" width="29" height="29" />
        <icon src="www/img/iconeapp.png" width="58" height="58" />
        <icon src="www/img/iconeapp.png" width="50" height="50" />
        <icon src="www/img/iconeapp.png" width="100" height="100" />
    </platform>
</widget>
