<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.nossodeputado" version="0.1.8" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Nosso Deputado</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-statusbar" source="npm" spec="1.0.0" />
    <plugin name="cordova-plugin-ios-permissions" spec="https://github.com/MBuchalik/cordova-plugin-ios-permissions.git#v1.1.1" source="git" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="orientation" value="portrait" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="www/img/icone/iconeapp.png" />
        <icon density="mdpi" src="www/img/icone/iconeapp.png" />
        <icon density="hdpi" src="www/img/icone/iconeapp.png" />
        <icon density="xhdpi" src="www/img/icone/iconeapp.png" />
        <icon density="xxhdpi" src="www/img/icone/iconeapp.png" />
        <icon density="xxxhdpi" src="www/img/icone/iconeapp.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="180" src="www/img/icone/iconeapp-180.png" width="180" />
        <icon height="60" src="www/img/icone/iconeapp-60.png" width="60" />
        <icon height="120" src="www/img/icone/iconeapp-120.png" width="120" />
        <icon height="76" src="www/img/icone/iconeapp-76.png" width="76" />
        <icon height="152" src="www/img/icone/iconeapp-152.png" width="152" />
        <icon height="40" src="www/img/icone/iconeapp-40.png" width="40" />
        <icon height="80" src="www/img/icone/iconeapp-80.png" width="80" />
        <icon height="57" src="www/img/icone/iconeapp-57.png" width="57" />
        <icon height="114" src="www/img/icone/iconeapp-114.png" width="114" />
        <icon height="72" src="www/img/icone/iconeapp-72.png" width="72" />
        <icon height="144" src="www/img/icone/iconeapp-144.png" width="144" />
        <icon height="29" src="www/img/icone/iconeapp-29.png" width="29" />
        <icon height="58" src="www/img/icone/iconeapp-58.png" width="58" />
        <icon height="50" src="www/img/icone/iconeapp-50.png" width="50" />
        <icon height="100" src="www/img/icone/iconeapp-100.png" width="100" />
    </platform>
    <engine name="android" spec="~7.0.0" />
</widget>
